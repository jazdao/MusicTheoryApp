<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResult">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/fall" />

    <TextView
        android:id="@+id/result1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textAlignment="center"
        android:background="#188291"
        android:text="Score"
        android:textSize="35sp"
        android:textColor="#fdfcfc"
        android:fontFamily="@font/wendy"
        android:textStyle="bold"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <TextView
        android:id="@+id/score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="100sp"
        android:textColor="#ffb000"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result1"/>

    <Button
        android:id="@+id/try1"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:background="#188291"
        android:text="♪ Try Again"
        android:paddingRight="10dp"
        android:textColor="#f9f9f9"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/score1"/>

    <Button
        android:id="@+id/next"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:background="#188291"
        android:text="♪ Lessons"
        android:paddingRight="10dp"
        android:textColor="#f9f9f9"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/try1"/>

    <TextView
        android:id="@+id/ornament"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#164d56"
        android:text="@string/ornament"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#f9f9f9"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>